{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["@types/styled-components-react-native", "jest"],
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@resources/*": ["src/resources/*"],
      "@screens/*": ["src/screens/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"]
    }
  }
}
